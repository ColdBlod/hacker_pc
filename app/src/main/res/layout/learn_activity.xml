<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/learn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:text="back" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/learn_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                app:srcCompat="@drawable/black" />

            <TextView
                android:id="@+id/learn_time_lb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FF0000"
                android:textSize="24sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/learn_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/left" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/learn_lb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#37FF00"
                    android:gravity="center"
                    android:text="You've already graduated here"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/learn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rotation="0"
                    android:rotationX="0"
                    android:rotationY="0"
                    android:text="1500$"
                    android:textSize="20sp"
                    android:visibility="visible" />

            </FrameLayout>

            <ImageButton
                android:id="@+id/learn_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/right" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>