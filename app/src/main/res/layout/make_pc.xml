<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/make_pc_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:text="back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/make_pc_processor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="processor" />

                    <Button
                        android:id="@+id/make_pc_motherboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="motherboard" />

                    <Button
                        android:id="@+id/make_pc_ram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="ram" />

                    <Button
                        android:id="@+id/make_pc_disks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="disk" />

                    <Button
                        android:id="@+id/make_pc_cooler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="cooler" />

                    <Button
                        android:id="@+id/make_pc_psu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0400"
                        android:text="psu" />

                    <Button
                        android:id="@+id/make_pc_videocard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="videocard" />

                    <Button
                        android:id="@+id/make_pc_case"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:text="case" />

                    <Button
                        android:id="@+id/make_pc_sum_up_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF0000"
                        android:text="sum up" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/showcase_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/make_pc_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00FF05"
            android:text="accept" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>